<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Vista tipo tree del modelo materiales.recepcion -->
        <record model="ir.ui.view" id="materiales_recepcion_tree">
            <field name="name">materiales.recepcion.tree</field>
            <field name="model">materiales.recepcion</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Recepción" create="true" import="true">
                    <field name="name"/>
                    <field name="fecha"/>
                    <field name="ubicacion_recepcion"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Vista tipo form del modelo materiales.recepcion -->
        <record model="ir.ui.view" id="materiales_recepcion_form">
            <field name="name">materiales.recepcion.form</field>
            <field name="model">materiales.recepcion</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Recepción">
                    <header>
                        <row>
                            <field name="status" widget="statusbar" statusbar_visible="creado,aplicado,cancelado"/>
                            <button name="action_aplicar" type="object" string="Aplicar Recepción" class="oe_highlight" status="creado"/>
                            <button name="action_cancelar" type="object" string="Cancelar Recepción" class="oe_highlight" status="creado"/>
                        </row>
                    </header>
                    <sheet>
                        <group string="Información de Recepción">
                            <field name="name"/>
                            <field name="fecha"/>
                            <field name="observaciones"/>
                            <field name="ubicacion_recepcion"/>
                        </group>
                        <notebook>
                            <page string="Detalles de Recepción">
                                <field name="detalle_ids">
                                    <tree editable="bottom">
                                        <field name="compra_id"/>
                                        <field name="producto"/>
                                        <field name="cantidad"/>
                                        <field name="costo_real"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista de búsqueda del modelo materiales.recepcion -->
        <record model="ir.ui.view" id="materiales_recepcion_search">
            <field name="name">materiales.recepcion.search</field>
            <field name="model">materiales.recepcion</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="fecha"/>
                    <field name="ubicacion_recepcion"/>
                    <field name="status"/>
                </search>
            </field>
        </record>

        <!-- Acción para el modelo de recepción -->
        <record id="materiales_recepcion_action" model="ir.actions.act_window">
            <field name="name">Recepciones</field>
            <field name="res_model">materiales.recepcion</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="materiales_recepcion_search"/>
        </record>
    </data>
</openerp>
